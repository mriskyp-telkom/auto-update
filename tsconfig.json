{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*"],
      "components/*": ["src/components/*"],
      "configs/*": ["src/configs/*"],
      "constants/*": ["src/constants/*"],
      "helpers/*": ["src/helpers/*"],
      "repositories/*": ["src/repositories/*"],
      "services/*": ["src/services/*"],
      "stores/*": ["src/stores/*"],
      "types/*": ["src/types/*"],
      "views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*"]
}
